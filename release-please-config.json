{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    "/charts": {
      "release-type": "helm",
      "changelog-path": "charts/CHANGELOG.md",
      "versioning-strategy": "auto",
      "default-branch": "main",
      "release-as": "helm",
      "include-component-in-tag": true
    }
  }
}
